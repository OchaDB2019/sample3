html
    head
        link(ref="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
        link(rel="stylesheet" href="css/materialize.min.css" media="screen,projection")
        link(rel="stylesheet" href="css/app.css")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
    body
        script(type="text/javascript" src="js/materialize.min.js")
        div(class="container")
            form(method='post', action='/tweet')
                label いまどうしてる: 
                input(type='text', name='tweet_content')
                input(type='submit', value='送信')
            each row in results
                div(class="row")
                    div(class="col 12")
                        img(class="icon" src="icons/"+row['account']+".png")
                    div(class="col s11")
                        div(class="tweetinfo") #{row['name']} @#{row['account']} #{row['datetime']}
                        div #{row['content']}

        